<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuildBudget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Grey</item>
        <item name="colorPrimaryVariant">@color/d_grey</item>
        <item name="colorOnPrimary">@color/Black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Teal</item>
        <item name="colorSecondaryVariant">@color/d_teal</item>
        <item name="colorOnSecondary">@color/White</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Default</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceStyle</item>
    </style>
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>
    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/work_sans</item>
    </style>
    <style name="PreferenceStyle" parent="Theme.BuildBudget">
        <item name="colorSecondary">@color/Orange</item>
        <item name="colorSecondaryVariant">@color/d_orange</item>
        <item name="colorOnSecondary">@color/Black</item>
    </style>
</resources>