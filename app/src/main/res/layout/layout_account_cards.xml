<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignWithParentIfMissing="true"
    android:layout_marginStart="90dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/card_layout_front"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/card_title_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/work_sans_medium"
                android:text="Card1"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_bal_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="à§³2500.30"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/pebbles_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/pebbles_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardholder_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/work_sans"
                    android:text="Jane Doe"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/card_provider_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/work_sans_bold"
                    android:text="VISA"
                    android:textAlignment="textEnd"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_layout_back"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pebbles_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:paddingVertical="15dp"
                    android:paddingStart="5dp"
                    app:srcCompat="@drawable/pebbles_vertical" />

                <TextView
                    android:id="@+id/card_title_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:fontFamily="@font/work_sans_medium"
                    android:paddingTop="13dp"
                    android:rotation="90"
                    android:text="Card1"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_or_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text="CARD NUMBER"
                    android:textColor="@color/White"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/card_number_back"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="123412341234"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/expires_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="EXPIRES ON"
                    android:textColor="@color/White"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/card_expiry_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:text="11/22"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="CVV"
                    android:textColor="@color/White"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/card_cvv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/work_sans"
                    android:text="***"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/card_provider_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/work_sans_bold"
                    android:text="VISA"
                    android:textAlignment="textEnd"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>